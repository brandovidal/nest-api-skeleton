{
  "name": "nest-api-skeleton",
  "version": "0.0.1",
  "description": "",
  "author": "Brando Vidal",
  "scripts": {
    "deps": "pnpm run db:stop && pnpm run db:init && pnpm run db:migrate",
    "build": "nest build",
    "dev": "dotenv -e .env.dev -- nest start --watch",
    "start": "nest start",
    "start:debug": "dotenv -e .env.dev -- nest start --debug --watch",
    "start:prod": "node dist/main",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "pnpm run test:unit && pnpm run test:e2e",
    "test:watch": "pnpm run test:unit --watchAll",
    "test:cov": "pnpm run test:unit --coverage",
    "test:unit": "jest --config ./jest.config.json",
    "test:e2e": "dotenv -e .env.test -- jest --config ./jest-e2e.config.json",
    "db:init": "docker compose up -d",
    "db:migrate": "pnpm run db:migrate:dev && pnpm run db:migrate:test",
    "db:migrate:dev": "dotenv -e .env.dev -- pnpm dlx prisma migrate dev --name dev",
    "db:migrate:test": "dotenv -e .env.test -- pnpm dlx prisma migrate dev --name test",
    "db:stop": "docker compose down",
    "clean": "rimraf node_modules/ dist/ pnpm-lock.yaml",
    "prepare": "husky"
  },
  "dependencies": {
    "@nestjs/axios": "3.1.2",
    "@nestjs/common": "10.4.8",
    "@nestjs/config": "3.3.0",
    "@nestjs/core": "10.4.8",
    "@nestjs/mapped-types": "2.0.6",
    "@nestjs/platform-express": "10.4.8",
    "@nestjs/swagger": "7.4.2",
    "@prisma/client": "5.22.0",
    "axios": "1.7.7",
    "dayjs": "1.11.13",
    "nestjs-pino": "4.1.0",
    "pino-http": "10.3.0",
    "pino-pretty": "13.0.0",
    "reflect-metadata": "0.2.2",
    "rxjs": "7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "10.4.7",
    "@nestjs/schematics": "10.2.3",
    "@nestjs/testing": "10.4.8",
    "@types/express": "5.0.0",
    "@types/jest": "29.5.14",
    "@types/node": "22.9.0",
    "@types/supertest": "6.0.2",
    "@typescript-eslint/eslint-plugin": "8.14.0",
    "@typescript-eslint/parser": "8.14.0",
    "dotenv-cli": "7.4.2",
    "eslint": "8.57.1",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-prettier": "5.2.1",
    "husky": "9.1.6",
    "jest": "29.7.0",
    "nestjs-zod": "4.2.0",
    "prettier": "3.3.3",
    "prisma": "5.22.0",
    "rimraf": "6.0.1",
    "supertest": "7.0.0",
    "ts-jest": "29.2.5",
    "typescript": "5.4.5",
    "zod": "3.23.8"
  }
}
