{
  "name": "nest-api-skeleton",
  "version": "0.0.1",
  "description": "",
  "author": "Brando Vidal",
  "scripts": {
    "deps": "pnpm db:stop && pnpm db:init",
    "build": "nest build",
    "dev": "nest start --watch",
    "start": "nest start",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "pnpm test:unit && pnpm test:e2e",
    "test:watch": "pnpm test:unit --watchAll",
    "test:cov": "pnpm test:unit --coverage",
    "test:unit": "jest --config ./jest.config.json",
    "test:e2e": "jest --config ./jest-e2e.config.json",
    "db:init": "docker compose up -d",
    "db:migrate": "pnpm dlx prisma migrate dev --name init",
    "db:stop": "docker compose down"
  },
  "dependencies": {
    "@nestjs/axios": "3.1.1",
    "@nestjs/common": "10.0.5",
    "@nestjs/config": "3.3.0",
    "@nestjs/core": "10.0.5",
    "@nestjs/mapped-types": "2.0.5",
    "@nestjs/platform-express": "10.0.5",
    "@nestjs/swagger": "8.0.3",
    "@prisma/client": "5.22.0",
    "axios": "1.7.7",
    "dayjs": "1.11.13",
    "nestjs-pino": "4.1.0",
    "pino-http": "10.3.0",
    "pino-pretty": "13.0.0",
    "reflect-metadata": "0.2.2",
    "rxjs": "7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "10.0.5",
    "@nestjs/schematics": "10.0.3",
    "@nestjs/testing": "10.0.5",
    "@types/express": "5.0.0",
    "@types/jest": "29.5.2",
    "@types/node": "20.3.3",
    "@types/supertest": "6.0.0",
    "@typescript-eslint/eslint-plugin": "8.0.1",
    "@typescript-eslint/parser": "8.0.1",
    "eslint": "8.57.1",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-prettier": "5.0.1",
    "jest": "29.5.0",
    "nestjs-zod": "4.2.0",
    "prettier": "3.0.3",
    "prisma": "5.22.0",
    "supertest": "7.0.0",
    "ts-jest": "29.1.5",
    "typescript": "5.1.6",
    "zod": "3.23.8"
  }
}
